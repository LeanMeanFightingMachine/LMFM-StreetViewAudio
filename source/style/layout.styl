body, html
	size: 100% auto
	min-height: 100%
	background: COLOR_BODY_BACKGROUND

.map
	size 100%
	position absolute

.street-view-background
	position absolute
	size 100%
	background-color rgba(0, 0, 0, 0.5)
	cursor: pointer

.street-view
	left 20%
	top 20%
	width 60%
	height 60%
	position absolute

	-webkit-box-shadow 10px 10px 5px 0px rgba(0,0,0,0.12)
	-moz-box-shadow 10px 10px 5px 0px rgba(0,0,0,0.12)
	box-shadow 10px 10px 5px 0px rgba(0,0,0,0.12)

.last-fm-marker
	position absolute
	width 36px
	height 36px
	background-image url(../image/last-fm-marker.png)

.is-hidden
	visibility hidden
